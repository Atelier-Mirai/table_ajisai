<p id="notice"><%= notice %></p>

<h1>出欠回答一覧</h1>

<table>
  <thead>
    <tr>
      <th>イベントID</th>
      <th>名前</th>
      <th>予定</th>
      <th>コメント</th>
      <th colspan="3">アクション</th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.schedule_id %></td>
        <td><%= answer.name %></td>
        <td><%= answer.reason %></td>
        <td><%= answer.comment %></td>
        <td><%= link_to '確認', answer %></td>
        <td><%= link_to '編集', edit_answer_path(answer) %></td>
        <td><%= link_to '削除', answer, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規に回答する', new_answer_path %>
